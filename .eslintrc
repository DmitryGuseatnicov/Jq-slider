{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "plugin:fsd/all"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "plugins": ["@typescript-eslint", "fsd"],
  "rules": {
    "import/extensions": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js",".ts"]
      }
    }
  }
}
