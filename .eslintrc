{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "plugin:fsd/all",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "import/extensions": "off",
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  }
}
